<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="1">


    <TextView
        android:id="@+id/patientUserEdit"
        android:layout_width="198dp"
        android:layout_height="37dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/patientEditButton"
        android:layout_width="89dp"
        android:layout_height="37dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1.0"
        android:text="@string/edit"
        app:backgroundTint="#4CAF50"
        app:layout_constraintEnd_toStartOf="@+id/patientDeleteButton"
        app:layout_constraintStart_toEndOf="@+id/patientUserEdit"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/patientDeleteButton"
        android:layout_width="89dp"
        android:layout_height="37dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1.0"
        android:text="@string/delete"
        app:backgroundTint="#4CAF50"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
